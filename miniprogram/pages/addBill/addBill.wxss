.title-tab-container {
    display: flex;

    color: lightslategray;
    height: 100rpx;
    align-items: center;
    font-size: 34rpx;
    font-weight: 400;
}

.title-tab-container .title-tab-item {
    margin-right: 20rpx;
    border: 2px solid #f6f6f6;
}

.title-tab-item-selected {
    color: black;
    border-bottom-color: black !important;
}

.amount-container {
    height: 100rpx;
    color: darkgreen;
    font-size: 50rpx;
}

.icon-container {
    overflow: scroll;
}

.icon-container .iconfont {

    display: inline-block;
    margin-right: 10rpx;
    height: 100rpx;
}


.number-pad-container {
